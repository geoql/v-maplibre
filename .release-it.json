{
  "$schema": "https://unpkg.com/release-it@latest/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "tagName": "v${version}",
    "push": true,
    "commitArgs": ["--no-verify"]
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "hooks": {
    "before:init": ["bun run lint", "bun run format:check", "bun test run"],
    "after:bump": ["node scripts/sync-version.js", "bun run build"],
    "before:git:release": ["bun run format && git add -A"],
    "after:release": "echo Successfully released ${name} v${version} to npm and GitHub"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
