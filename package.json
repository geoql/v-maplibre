{
  "name": "v-maplibre-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Vinayak Kulkarni",
    "email": "inbox.vinayak@gmail.com",
    "url": "https://vinayakkulkarni.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geoql/v-maplibre.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "!apps/docs"
    ],
    "catalog": {
      "vue": "^3.5.27",
      "typescript": "^5.9.3",
      "oxlint": "^1.43.0",
      "oxfmt": "^0.28.0",
      "maplibre-gl": "^5.17.0"
    },
    "catalogs": {
      "deckgl": {
        "@deck.gl/core": "^9.2.6",
        "@deck.gl/layers": "^9.2.6",
        "@deck.gl/mapbox": "^9.2.6",
        "@deck.gl/aggregation-layers": "^9.2.6",
        "@deck.gl/geo-layers": "^9.2.6",
        "@deck.gl/mesh-layers": "^9.2.6",
        "@luma.gl/core": "^9.2.6",
        "@luma.gl/engine": "^9.2.6",
        "@luma.gl/gltf": "^9.2.6",
        "@luma.gl/shadertools": "^9.2.6",
        "@loaders.gl/3d-tiles": "^4.3.4",
        "@loaders.gl/core": "^4.3.4",
        "@loaders.gl/gltf": "^4.3.4",
        "@math.gl/core": "^4.1.0",
        "@math.gl/types": "^4.1.0"
      }
    }
  },
  "type": "module",
  "scripts": {
    "build": "bun run --cwd packages/v-maplibre build && bun run --cwd packages/mapcn-vue build && bun run --cwd apps/docs build && bun run --cwd apps/mapcn-vue build",
    "build:docs": "cd apps/docs && bun run build",
    "build:mapcn": "bun run --cwd apps/mapcn-vue build",
    "setup:docs": "cd apps/docs && bun install",
    "dev:docs": "cd apps/docs && bun run dev",
    "dev:mapcn": "bun run --cwd apps/mapcn-vue dev",
    "dev:lib": "bun run --cwd packages/v-maplibre dev",
    "lint": "bun run --filter '!@geoql/v-maplibre-docs' lint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "test": "bun run --cwd packages/v-maplibre test",
    "test:coverage": "bun run --cwd packages/v-maplibre test:coverage",
    "prepare": "husky || true",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist apps/*/.nuxt apps/*/.output"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.9"
}
