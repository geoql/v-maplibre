{
  "name": "v-maplibre-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "!apps/docs"
    ],
    "catalog": {
      "vue": "^3.5.26",
      "typescript": "^5.9.3",
      "oxlint": "^1.38.0",
      "prettier": "^3.7.4",
      "maplibre-gl": "^5.15.0",
      "@awmottaz/prettier-plugin-void-html": "^2.0.0"
    },
    "catalogs": {
      "deckgl": {
        "@deck.gl/core": "^9.2.5",
        "@deck.gl/layers": "^9.2.5",
        "@deck.gl/mapbox": "^9.2.5",
        "@deck.gl/aggregation-layers": "^9.2.5",
        "@deck.gl/geo-layers": "^9.2.5",
        "@deck.gl/mesh-layers": "^9.2.5"
      }
    }
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:docs": "cd apps/docs && bun run build",
    "build:mapcn": "bun run --cwd apps/mapcn-vue build",
    "setup:docs": "cd apps/docs && bun install",
    "dev:docs": "cd apps/docs && bun run dev",
    "dev:mapcn": "bun run --cwd apps/mapcn-vue dev",
    "dev:lib": "bun run --cwd packages/v-maplibre dev",
    "lint": "bun run --filter '*' lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun run --cwd packages/v-maplibre test",
    "test:coverage": "bun run --cwd packages/v-maplibre test:coverage",
    "release": "bun run --cwd packages/v-maplibre release",
    "prepare": "husky || true",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist apps/*/.nuxt apps/*/.output"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "catalog:",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "oxlint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5",
  "author": {
    "name": "Vinayak Kulkarni",
    "email": "inbox.vinayak@gmail.com",
    "url": "https://vinayakkulkarni.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geoql/v-maplibre.git"
  }
}
