{
  "name": "v-maplibre-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:docs": "pnpm --dir apps/docs run build",
    "build:mapcn": "bun run --cwd apps/mapcn-vue build",
    "setup:docs": "pnpm --dir apps/docs install && pnpm --dir apps/docs rebuild better-sqlite3",
    "dev:docs": "pnpm --dir apps/docs run dev",
    "dev:mapcn": "bun run --cwd apps/mapcn-vue dev",
    "dev:lib": "bun run --cwd packages/v-maplibre dev",
    "lint": "bun run --filter '*' lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun run --cwd packages/v-maplibre test",
    "test:coverage": "bun run --cwd packages/v-maplibre test:coverage",
    "release": "bun run --cwd packages/v-maplibre release",
    "prepare": "husky || true",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist apps/*/.nuxt apps/*/.output"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "^2.0.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.37.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.2.17",
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "Vinayak Kulkarni",
    "email": "inbox.vinayak@gmail.com",
    "url": "https://vinayakkulkarni.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geoql/v-maplibre.git"
  }
}
